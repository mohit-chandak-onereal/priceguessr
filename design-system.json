{
  "name": "PriceGuessr Game Show Design System",
  "description": "Design tokens for The Price is Right inspired game show theme",
  "themes": {
    "gameShow": {
      "colors": {
        "background": "#0f0f0f",
        "foreground": "#ffffff",
        "stage": {
          "dark": "#1a1a1a",
          "darker": "#0a0a0a",
          "border": "#2a2a2a"
        },
        "primary": {
          "yellow": "#facc15",
          "yellowBright": "#fde047",
          "orange": "#fb923c",
          "orangeBright": "#fdba74"
        },
        "accent": {
          "red": "#ef4444",
          "redBright": "#f87171",
          "green": "#22c55e",
          "greenBright": "#4ade80",
          "blue": "#3b82f6",
          "blueBright": "#60a5fa",
          "purple": "#a855f7",
          "purpleBright": "#c084fc"
        },
        "ui": {
          "border": "#404040",
          "borderSubtle": "#2a2a2a",
          "muted": "#71717a",
          "mutedForeground": "#a1a1aa",
          "success": "#22c55e",
          "error": "#ef4444",
          "warning": "#facc15",
          "info": "#3b82f6"
        }
      },
      "gradients": {
        "yellowOrange": "linear-gradient(135deg, #facc15 0%, #fb923c 100%)",
        "neonGlow": "linear-gradient(135deg, #fde047 0%, #facc15 50%, #fb923c 100%)",
        "feelingWild": "linear-gradient(45deg, #facc15, #fb923c, #f87171, #c084fc, #60a5fa, #4ade80, #facc15)",
        "stageLight": "radial-gradient(ellipse at top, rgba(250, 204, 21, 0.2), transparent 60%)",
        "winner": "linear-gradient(135deg, #fde047 0%, #22c55e 100%)"
      },
      "shadows": {
        "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.8)",
        "md": "0 4px 6px -1px rgba(0, 0, 0, 0.8), 0 2px 4px -1px rgba(0, 0, 0, 0.6)",
        "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.8), 0 4px 6px -2px rgba(0, 0, 0, 0.6)",
        "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.8), 0 10px 10px -5px rgba(0, 0, 0, 0.6)",
        "glow": {
          "yellow": "0 0 20px rgba(250, 204, 21, 0.8), 0 0 40px rgba(250, 204, 21, 0.4)",
          "red": "0 0 20px rgba(239, 68, 68, 0.8), 0 0 40px rgba(239, 68, 68, 0.4)",
          "green": "0 0 20px rgba(34, 197, 94, 0.8), 0 0 40px rgba(34, 197, 94, 0.4)",
          "neon": "0 0 10px rgba(250, 204, 21, 1), 0 0 20px rgba(250, 204, 21, 0.8), 0 0 40px rgba(250, 204, 21, 0.6)"
        },
        "text": {
          "yellow": "2px 2px 4px rgba(0, 0, 0, 0.8), 0 0 20px rgba(250, 204, 21, 0.6)",
          "white": "2px 2px 4px rgba(0, 0, 0, 0.8)",
          "retro": "3px 3px 0px rgba(0, 0, 0, 0.8), 0 0 30px rgba(250, 204, 21, 0.5)"
        }
      },
      "effects": {
        "glassMorphism": {
          "background": "rgba(26, 26, 26, 0.8)",
          "backdropFilter": "blur(12px)",
          "border": "1px solid rgba(255, 255, 255, 0.1)"
        },
        "neonBorder": {
          "border": "2px solid #facc15",
          "boxShadow": "0 0 10px rgba(250, 204, 21, 0.8), inset 0 0 10px rgba(250, 204, 21, 0.3)"
        },
        "stagePanel": {
          "background": "linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%)",
          "border": "2px solid #404040",
          "boxShadow": "0 4px 12px rgba(0, 0, 0, 0.8), inset 0 1px 0 rgba(255, 255, 255, 0.1)"
        }
      }
    }
  },
  "typography": {
    "fontFamily": {
      "sans": ["system-ui", "-apple-system", "sans-serif"],
      "gameShow": ["Arial Black", "Helvetica Neue", "sans-serif"],
      "mono": ["Courier New", "monospace"],
      "retro70s": {
        "css": "font-family: 'Arial Black', sans-serif; font-weight: 900; letter-spacing: -0.05em; text-transform: uppercase;"
      }
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem",
      "6xl": "3.75rem",
      "7xl": "4.5rem",
      "8xl": "6rem",
      "retro": {
        "small": "2.5rem",
        "medium": "3.5rem",
        "large": "5rem",
        "xlarge": "7rem"
      }
    },
    "fontWeight": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700,
      "extrabold": 800,
      "black": 900
    },
    "lineHeight": {
      "tight": 1.1,
      "snug": 1.2,
      "normal": 1.5,
      "relaxed": 1.75
    },
    "letterSpacing": {
      "tighter": "-0.05em",
      "tight": "-0.025em",
      "normal": "0em",
      "wide": "0.025em",
      "wider": "0.05em",
      "widest": "0.1em"
    }
  },
  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem",
    "4xl": "6rem",
    "5xl": "8rem"
  },
  "borderRadius": {
    "none": "0",
    "sm": "0.125rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "2xl": "1rem",
    "3xl": "1.5rem",
    "full": "9999px"
  },
  "animation": {
    "duration": {
      "instant": "100ms",
      "fast": "200ms",
      "normal": "300ms",
      "slow": "500ms",
      "slower": "1000ms",
      "slowest": "2000ms"
    },
    "easing": {
      "linear": "linear",
      "in": "cubic-bezier(0.4, 0, 1, 1)",
      "out": "cubic-bezier(0, 0, 0.2, 1)",
      "inOut": "cubic-bezier(0.4, 0, 0.2, 1)",
      "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)",
      "elastic": "cubic-bezier(0.68, -0.55, 0.265, 1.85)"
    },
    "keyframes": {
      "pulse": {
        "0%, 100%": { "opacity": "1" },
        "50%": { "opacity": "0.5" }
      },
      "spin": {
        "from": { "transform": "rotate(0deg)" },
        "to": { "transform": "rotate(360deg)" }
      },
      "bounce": {
        "0%, 100%": { "transform": "translateY(0)" },
        "50%": { "transform": "translateY(-25%)" }
      },
      "glow": {
        "0%, 100%": { "filter": "brightness(1)" },
        "50%": { "filter": "brightness(1.2)" }
      },
      "starRotate": {
        "from": { "transform": "rotate(0deg)" },
        "to": { "transform": "rotate(360deg)" }
      }
    }
  },
  "components": {
    "button": {
      "gameShow": {
        "base": "px-8 py-4 font-black text-xl uppercase tracking-wider rounded-lg transition-all duration-200",
        "primary": "bg-gradient-to-r from-yellow-bright to-orange-bright text-stage-dark hover:scale-105",
        "secondary": "bg-stage-dark text-yellow-bright border-2 border-yellow-bright hover:bg-yellow-bright hover:text-stage-dark"
      }
    },
    "panel": {
      "gameShow": {
        "base": "bg-stage-dark border-2 border-border rounded-lg p-6",
        "glow": "shadow-[0_0_20px_rgba(250,204,21,0.3)]",
        "inset": "shadow-[inset_0_2px_4px_rgba(0,0,0,0.5)]"
      }
    },
    "badge": {
      "attempts": {
        "base": "px-3 py-1 rounded-full text-sm font-bold",
        "colors": "bg-yellow-bright text-stage-dark"
      }
    }
  },
  "breakpoints": {
    "xs": "475px",
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  }
}